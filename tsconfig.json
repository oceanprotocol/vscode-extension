{
  "compilerOptions": {
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // "lib": ["ESNext", "dom"],
    "declaration": true,
    "target": "ES2020",
    // "module": "CommonJS",
    "module": "ESNext",
    "removeComments": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "outDir": "./dist/node/",
    "rootDir": "./src/",
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["vscode", "mocha", "node"]
  },
  "@oceanprotocol/lib": {
    "esm": true
  },
  "@oceanprotocol/ddo-js": {
    "esm": true
  },
  "mocha": {
    "esm": true
  },
  "include": ["src/**/*", "src/tests/**/*"],
  "exclude": ["node_modules"]
}
